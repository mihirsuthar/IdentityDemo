
@using IdentityDemo.Infrastructure
@using IdentityDemo.Models

@model IEnumerable<AppRole>

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>
<br />

<div class="row col-md-12">
    <div class="card" style="width: inherit;">
        <div class="card-header bg-dark text-white">
            User Roles
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Users</th>
                    <th>Actions</th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr><td colspan="4" class="text text-danger text-center">No Roles defined yet.</td></tr>
                }
                else
                {
                    foreach (AppRole role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                @if (role.Users == null || role.Users.Count == 0)
                                {
                                    @: No Users in this Role
                                }
                                else
                                {
                                    <p>
                                        @string.Join(",", role.Users.Select(x => Html.GetUserName(x.UserId)))
                                    </p>
                                }
                            </td>
                            <td>
                                <div class="row">
                                    
                                    @using (Html.BeginForm("Delete", "RoleAdmin", new { Id = role.Id }, FormMethod.Post))
                                    {   <button type="submit" class="btn btn-link text-danger" onclick="return confirm('Are you sure to delete account of user \'@role.Name\'?')">
                                        <img src="~/Images/delete-icon.png" width="25" height="25" />
                                    </button>
                                    }
                                </div>

                            </td>
                        </tr>
                    }
                }
            </table>
            <br />
        </div>
    </div>
    <br /><br />
    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-dark" })
</div>
